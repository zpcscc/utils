{
  "name": "@dxsixpc/utils",
  "version": "0.0.8",
  "description": "工具库",
  "homepage": "https://dxsixpc.github.io/utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/dxsixpc/utils"
  },
  "license": "MIT",
  "author": {
    "name": "dxsix",
    "email": "desixpc@gmail.com"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "commit": "git add . && git-cz",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "father doctor && npm run build",
    "start": "npm run dev"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "axios": "^1.3.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@commitlint/cz-commitlint": "^17.4.4",
    "@dxsixpc/configs": "^0.3.3",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.0.28",
    "antd": "^5.2.2",
    "commitizen": "^4.0.3",
    "dumi": "^2.1.10",
    "eslint": "^8.34.0",
    "father": "^4.1.5",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "inquirer": "^8.0.0",
    "lint-staged": "^13.1.2",
    "postcss": ">=8.4.6 <9.0.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": ">= 16.8.0",
    "styled-components": ">= 2",
    "stylelint": "^15.2.0",
    "typescript": ">=4.7.0 <5.0.0",
    "webpack": ">=5.20.0 <6.0.0"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
